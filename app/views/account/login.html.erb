<h2>Вход на сайт</h2>
<% form_for :user, :url => {:action => 'authenticate'} do |f| -%>
  <fieldset>
    <label for=user_username">Логин:</label>
    <%= f.text_field :username, :size => 32, :class=>"text" %>

    <label for=user_password">Пароль:</label>
    <%= f.password_field :password, :size => 32, :class=>"text" %>

    <div class="clear"></div>
    <%= submit_tag 'Войти', :class=>"fancy-submit" %>
  </fieldset>
<% end %>
