%h1 Регистрация

=form_for(@user) do |f|
  = f.error_messages
  %fieldset
    %label{:for=>"user_username"} Ник:
    = f.text_field :username, :class=>"text"

    %label{:for=>"user_email"} Email:
    = f.text_field :email, :class=>"text"

    %label{:for=>"user_password"} Пароль:
    = f.password_field :password, :class=>"text"

    %label{:for=>"user_password_confirmation"} Повторите пароль:
    = f.password_field :password_confirmation, :class=>"text"
    .clear
    %div{:style=>"display:none;"}
      %input{:type=>"checkbox", :name=>"user[check_field]", :value=>"1"}
    = f.submit 'Отправить', :class=>"colored-button big primary"
