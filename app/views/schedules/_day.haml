%li{:id => schedule_day[:match_day].to_date.strftime("%Y-%m-%d")}
  .schedule-header
    =Russian::strftime(schedule_day[:match_day].to_date, "%A, %d %B %Y")
  .schedule-content
    %table
      -schedule_day[:day_matches].each_with_index do |schedule_item, i|
        -row_class = i%2 == 0 ? "" : "odd"
        - unless schedule_item.host_scores.nil?
          - winner_class = "fancy-score-winner"
          - loser_class = "fancy-score-loser"
          - hosts_class = ""
          - guests_class = ""
          - if schedule_item.host_scores > schedule_item.guest_scores
            - hosts_class = winner_class
            - guests_class = loser_class
          - elsif schedule_item.host_scores < schedule_item.guest_scores
            - hosts_class = loser_class
            - guests_class = winner_class
          - else
            - hosts_class = "fancy-score-equal"
            - guests_class = "fancy-score-equal"
        %tr{:class => row_class}
          %td.venue
            - unless schedule_item.venue.nil?
              = (!schedule_item.venue.icon.nil? ? image_tag("/images/icons/#{schedule_item.venue.icon}", :alt => "#{schedule_item.venue.name}", :title => "#{schedule_item.venue.name}") : schedule_item.venue.name)
          %td.league
            - unless schedule_item[:league_name].nil?
              = schedule_item[:league_short_name].nil? ? schedule_item[:league_name] : schedule_item[:league_short_name]
          %td.time= schedule_item.match_at
          %td= "#{schedule_item.hosts.name} "
          %td.score-container    
            .fancy-score{:class => hosts_class }= !schedule_item.host_scores.nil? ? schedule_item.host_scores : "-"
            .fancy-score.fancy-score-right{:class => guests_class}= !schedule_item.guest_scores.nil? ? schedule_item.guest_scores : "-"
            .clear
          %td= "#{schedule_item.guests.name}"
          -#%td= schedule_item.league_id
