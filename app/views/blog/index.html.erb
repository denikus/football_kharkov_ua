<% for post in @posts %>
<div class="content">
  <% if post.resource_type=='Article' %>
    <%= render(:partial => "article_item", :locals => { :post => post }) %>
  <% elsif post.resource_type=='PhotoGallery' %>  
    <%= render(:partial => "photo_gallery_item", :locals => { :post => post }) %>
  <% end%>
  <%= render :partial => "shared/blog_link_panel", :locals => {:post=>post} %>
</div>
<div class="clear"></div>
<% end %>
<%= will_paginate @posts %>

