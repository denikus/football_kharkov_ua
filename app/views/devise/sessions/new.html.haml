%h1 Вход
= form_for resource_name, resource, :url => session_path(resource_name) do |f|
  = f.error_messages

  %fieldset
    = f.label :Email
    %p= f.text_field :email, :class=>"text"

    = f.label "Пароль"
    %p= f.password_field :password, :class=>"text"

    -if devise_mapping.rememberable?
      %p
        = f.check_box :remember_me
        = f.label "Запомнить меня", {}, {:style => "display: inline;margin:10px;", :for => "user_remember_me"}

    .clear-space &nbsp;

    %p= f.submit "Войти", :class=>"fancy-button"

    - if devise_mapping.recoverable?
      = link_to "Забыли пароль?", new_password_path(resource_name)
      %br/
    - if devise_mapping.confirmable?
      = link_to "Не получили инструкций по активации аккаунта?", new_confirmation_path(resource_name)
      %br/



