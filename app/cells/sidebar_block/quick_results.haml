.sidebar-block
  .sidebar-block-header
    %h4= @opts[:title]
  .bd
    %ul.quick_match_results
      - @quick_results.each_with_index do |item, i|
        - winner_class = "fancy-score-winner"
        - loser_class = "fancy-score-loser"
        - hosts_class = ""
        - guests_class = ""
        - if item.hosts_score > item.guests_score
          - hosts_class = winner_class
          - guests_class = loser_class
        - elsif item.hosts_score < item.guests_score
          - hosts_class = loser_class
          - guests_class = winner_class
        -row_class = i%2 == 0 ? "" : "odd"
        %li{:class => row_class}
          .hosts= item.hosts
          .score-container
            .fancy-score{:class => hosts_class }= item.hosts_score
            .fancy-score.fancy-score-right{:class => guests_class }= item.guests_score
          .guests= item.guests
          .clear


