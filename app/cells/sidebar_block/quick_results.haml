.sidebar-block
  .sidebar-block-header
    %h4= @opts[:title]
  .bd
    %ul.quick_match_results
      - @quick_results.each do |item|
        - winner_class = "winner"
        - loser_class = "loser"
        - hosts_class = ""
        - guests_class = ""
        - if item.hosts_score > item.guests_score
          - hosts_class = winner_class
          - guests_class = loser_class
        - elsif item.hosts_score < item.guests_score
          - hosts_class = loser_class
          - guests_class = winner_class
        %li= "<span class=\"#{hosts_class}\">#{item.hosts}</span> <span class=\"score #{hosts_class}\">#{item.hosts_score}</span> : <span class=\"score #{guests_class} \">#{item.guests_score}</span> <span class=\"#{guests_class}\">#{item.guests}</span>"
