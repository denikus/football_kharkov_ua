.sidebar-block
  .sidebar-block-header
    %h4= @opts[:title]
    .header-bottom
      %table
        %tr
          %td.control=link_to image_tag("/images/buttons/prev.png"), "#", {:id => "prev-result-day"}
          %td#quick-result-current-date= Russian::strftime(@last_dates[0].match_on.to_date, "%a, %d %B '%y")
          %td.control= link_to image_tag("/images/buttons/next.png"), "#", {:id => "next-result-day"}
  .bd#quick-match-results-content
    =render :view => 'quick_results_content.haml', :locals => {:schedules => @schedules, :prev_date => prev_date, :current_date => current_date, :next_date => next_date}
:javascript
  $(function() {
    QuickMatchResults.init();
  });